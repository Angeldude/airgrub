<p id="notice"><%= notice %></p>

<header id="order">
<h1>Pick from any of our organic options </h1>
</header>

<div id="description">
<p>
  We offer a variety of fruits and vegetables,
  all locally grown with no artifical preservatives.
</p>
</div>

<div id="faq"><h1>Produce</h1></div>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produces.each do |produce| %>
      <tr>
        <td><%= produce.name %></td>
        <td><%= produce.description %></td>
        <td><%= produce.formatted_price %></td>
        <td><%= link_to 'Show', produce %></td>
        <td><%= link_to 'Edit', edit_produce_path(produce) %></td>
        <td><%= link_to 'Destroy', produce, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="button">
<%= link_to 'New', new_produce_path %> |
<%= link_to 'Home', root_path %>
</div>
